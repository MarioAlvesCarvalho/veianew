#### USAR ISSO PARA ARMAZENAR O LOG NO 0.97 SEM PRECISAR DE SENHA
###IP=`ifconfig | sed -En 's/127.0.0.1//;s/.*inet (addr:)?(([0-9]*\.){3}[0-9]*).*/\2/p'`
###echo -e "$HOSTNAME" "   -   " "$IP" "   -   " "$(date +%d/%m/%y__%H:%M:%S)" "   -   " "$VERSION" >> ${Scripts_veianew}/LOGVN/${HOSTNAME}.VNL;

